<script type="text/javascript">
//左下角设置
    $('#set_btn').click(function () {
        $(".click_hide").hide();
        $(this).find("#set_hide").toggle();
    });
    $(".menu_li ").on('click', function (e) {
        e.stopPropagation();
    });
    $("#personal_edit").on('click', function (e) {
        //编辑资料
        $("#img0").attr('src',t_avatar);
        $(".click_hide").hide();
        $("#personal_data").toggle();
        e.stopPropagation();
    });

    $("#personal_data").on('click', function (e) {
        //阻止编辑资料冒泡
        e.stopPropagation();
    });
    $("#pass_data_show").on('click', function (e) {
        //安全设置
        $(".click_hide").hide();
        $("#pass_data").toggle();
        e.stopPropagation();
    });
    //关闭个人资料弹窗
    $(".edit_alert .close").click(function () {

        $(".edit_alert").hide();
    });
    //修改上传头像
    $("#file0").change(function () {
        // getObjectURL是自定义的函数，见下面
        // this.files[0]代表的是选择的文件资源的第一个，因为上面写了 multiple="multiple" 就表示上传文件可能不止一个
        // ，但是这里只读取第一个
        var objUrl = getObjectURL(this.files[0]);
        // 这句代码没什么作用，删掉也可以
        // console.log("objUrl = "+objUrl) ;
        if (objUrl) {
            // 在这里修改图片的地址属性
            $("#img0").attr("src", objUrl);
        }
    });
    //建立一個可存取到該file的url
    function getObjectURL(file) {
        var url = null;
        // 下面函数执行的效果是一样的，只是需要针对不同的浏览器执行不同的 js 函数而已
        if (window.createObjectURL != undefined) { // basic
            url = window.createObjectURL(file);
        } else if (window.URL != undefined) { // mozilla(firefox)
            url = window.URL.createObjectURL(file);
        } else if (window.webkitURL != undefined) { // webkit or chrome
            url = window.webkitURL.createObjectURL(file);
        }
        return url;
    }
    //修改保存头像
    function edit_avatar() {
        if ($("#file0").val() != "") {
            var formData = new FormData();
            formData.append('file', $('#file0')[0].files[0]);
            $.ajax({
                type: 'post',
                url:__CDN__+"/team/avatar",
                data: formData,
                contentType: false,// 当有文件要上传时，此项是必须的，否则后台无法识别文件流的起始位置(详见：#1)
                processData: false,// 是否序列化data属性，默认true(注意：false时type必须是post，详见：#2)
                success: function (data) {    
                    var data_obj = jQuery.parseJSON(data);
                    alert(data_obj.msg); 
                    if (data_obj.code == 1) {
                        window.location.reload();
                    }
                }
            });
        } else {
            alert("请先选择图片");
        }
    }

    $("#personal_data .close").click(function () {
        //个人信息修改-关闭
        $("#personal_data").hide();
    });


    $("#pass_data .close").click(function () {
        $("#pass_data").hide();
    });
     //重置密码
    function edit_pwd() {
        var pwd = $('#pwd').val();
        var new_pwd = $('#new_pwd').val();
        var ff_pwd = $('#ff_pwd').val();
        if (pwd == "" || new_pwd == "" || ff_pwd == "") {
            alert("资料必须填写完整");
            return false;
        }
        if (new_pwd != ff_pwd) {
            alert("两次输入的密码不一致");
            return false;
        }
        $.post(__CDN__+"/resetPssword", "oldpassword=" + pwd + "&newpassword=" + new_pwd + "&renewpassword=" + ff_pwd, function (data) {
            var data_obj = jQuery.parseJSON(data);
            alert(data_obj.msg);
            if (data_obj.code == 1) {
                location.reload();
            }
          
            
        });
    }
</script>