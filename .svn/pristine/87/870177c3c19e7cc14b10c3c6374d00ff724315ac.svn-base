    // 添加保存分组名称
    function tj_fenzu_name() {
        var name = $('#fenzu_name').val();
        if (name == "") {
            alert('分组名称必须填写。');
            return false;
        }
        var postData = {
            //"teamOwner": uid,
            "name": name
        };
        $.ajax({

            url: __CDN__+"/team/add_team_name",    //请求的url地址
            type: "post",   //请求方式
            //mimeType:"multipart/form-data",
            async: true,//请求是否异步，默认为异步，这也是ajax重要特性
            data: postData,
            beforeSend: function () {
                //请求前的处理
            },
            success: function (data, status, xhr) {
                var data_obj = jQuery.parseJSON(data);
                if (data_obj.code == 1) {
                    $('#fenzu_name').val('');
                    $(".click_hide").hide();
                    getfenzu();
                }else{
                    alert(data_obj.msg);
                }
                

            },
            complete: function (req) {
                //请求完成的处理
            },
            error: function () {
                //请求出错处理

            }
        });
    }
    //编辑分组
    function edit_fenzu(id,name) {
        $(".click_hide").hide();
        $("#fenzu_change_m").hide();
        $("#fenzu_name_edit").show();
        $('#new_fenzu_name').val(name);
        $('#xg_fenzu_name').val(id);
    }
    //修改保存分组名称
    function xg_fenzu_name() {
        //修改分组名称
        var name = $('#new_fenzu_name').val();
        var id = $('#xg_fenzu_name').val();
        if (name == "") {
            alert('分组名称必须填写');
            return false;
        }
        var postData = {
            "teamId": id,
            "name": name
        };
        $.ajax({

            url: __CDN__+"/team/renameTeam",    //请求的url地址
            type: "post",   //请求方式
            //mimeType:"multipart/form-data",
            async: true,//请求是否异步，默认为异步，这也是ajax重要特性
            data: postData,
            beforeSend: function () {
                //请求前的处理
            },
            success: function (data, status, xhr) {
                var data_obj = jQuery.parseJSON(data);
                if (data_obj.code == 1) {
                    $(".click_hide").hide();
                    getfenzu();
                }else{
                    alert(data_obj.msg);
                }

                
            },
            complete: function (req) {
                //请求完成的处理
            },
            error: function () {
                //请求出错处理

            }
        });
    }

    //删除分组
    function del_fenzu(teamId) {
        $(".click_hide").hide();
        var flag = confirm("确定删除当前分组?");
        if (flag) {
            $.ajax({
//            url: "__CDN__/index/message/add_chat_record",    //请求的url地址
                url: __CDN__+"/team/removeTeam",    //请求的url地址
                dataType: "json",   //返回格式为json
                async: true,//请求是否异步，默认为异步，这也是ajax重要特性
                data: {
                    'teamId': teamId
                },    //参数值
                type: "post",   //请求方式
                beforeSend: function () {
                    //请求前的处理
                },
                success: function (data, status, xhr) {
                    getfenzu();
                    
                },
                complete: function (req) {
                    //请求完成的处理
                },
                error: function () {
                    //请求出错处理

                }
            });
        }

    }
    //显示用户编辑内容
    function right_show(th,id) {
        $.each($(".mes_del"),function(){
            $(this).prev().css('background','#ffffff');
            $(this).css('display','none');
            if ($(this).attr("id") == id) {
                $(this).css('display','block');
                $(this).prev().css('background','#f2f2f2');
            }

        })
        $(".info_right").hide();
        if (id != uid) {
            $(".info_right").show();
            $.post(__CDN__+"/team/user", "id=" + id, function (data) {
                var data_obj = jQuery.parseJSON(data);
                var  avatar_d = data_obj['data']['0']['avatar'];
                if (avatar_d == null) {
                   var avatar = 'img/head.jpg';
                }else{
                    var  avatar = __CDN__+'/'+avatar_d;
                }
                var sli = '<div class="circle"><p class="radius"><img src="'+avatar+'" alt="" onerror="nofind()"></p></div><div class="name">'+data_obj['data']['0']['name']+'</div><a href="message.html"><div class="btn_touch">发起对话</div></a>';
                $(".info_right").html(sli);

            });
        }
        
    }
    //修改用户所在分组
    function joinTeam(thd) {

        var teamUser = $("#send_hide_clone .fenzu_select").attr('id');
        var join_id = $(thd).val();
        var old_id = $("#send_hide_clone .fenzu_select").attr('data-oldId');
        $.ajax({

            url: __CDN__+"/team/addTeamUser",    //请求的url地址
            type: "get",   //请求方式
            //mimeType:"multipart/form-data",
            async: true,//请求是否异步，默认为异步，这也是ajax重要特性
            data: {
                'teamId': join_id,
                "teamUser": teamUser,
                "current_teamId": old_id
            },
            beforeSend: function () {
                //请求前的处理
            },
            success: function (data, status, xhr) {
                var data_obj = jQuery.parseJSON(data);
                if (data_obj.code == 1) {
                    $(".click_hide").hide();
                    getfenzu();
                }else{
                    alert(data_obj.msg);
                }
                
            },
            complete: function (req) {
                //请求完成的处理
            },
            error: function () {
                //请求出错处理

            }
        });

    }
    //移除用户
    function leaveTeam(teamId, teamUser) {
        
        $(".click_hide").hide();
        $.ajax({

            url: __CDN__+"/team/leaveTeam",    //请求的url地址
            type: "post",   //请求方式
            //mimeType:"multipart/form-data",
            async: true,//请求是否异步，默认为异步，这也是ajax重要特性
            data: {
                'teamUser': teamUser,
                'teamId': teamId
            },
            beforeSend: function () {
                //请求前的处理
            },
            success: function (data, status, xhr) {
                var data_obj = jQuery.parseJSON(data);
                if (data_obj.code == 1) {
                    //getfenzu();
                    window.location.reload();
                }
            },
            complete: function (req) {
                //请求完成的处理
            },
            error: function () {
                //请求出错处理
            }
        });
    }
    

    function nofind() {
        var img = event.srcElement;
        img.src = error_head;
        img.onerror = null;
    }
</script>