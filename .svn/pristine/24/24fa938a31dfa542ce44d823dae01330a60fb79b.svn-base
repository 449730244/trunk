.ico_add{background:url(../img/add.png) no-repeat left center; width:20px; height:20px; margin-top:16px; cursor: pointer;}
.ico_jt{width:16px; height:16px; margin-top:13px;}
.ico_jt_on{background:url(../img/ico_jt_on.png) no-repeat left center;}
.ico_jt_off{background:url(../img/ico_jt_off.png) no-repeat left center;}

.group_user_list ul, .group_user_list ul li{
    padding:0;
    margin:0;
    list-style: none;
}

.group_user_list ul{border-top:1px solid #bcd3dd; margin-top:10px;padding:10px 0; display:none;}
.group_user_list ul li{padding:5px 10px;}
.group_user_list ul li:hover{background-color:#eee;}
.group_user_list ul li img{
    border-radius:50%;
    background:url(../img/user.png) no-repeat;
    width:30px;
    height:30px;
    display:inline-block;
    vertical-align: middle;
}
.group_user_list ul li span{display:inline-block; font-size:14px;}
.group_user_list ul li span.remove{background:url(../img/del2.png) no-repeat center center; float:right; height:30px; width:20px; cursor:pointer;}
.group_user_list ul li span.send_msg{background:url(../img/left_menu1_sel.png) no-repeat center center; float:right; height:30px; width:24px; cursor:pointer; margin-right:5px;}


.check_user_list{padding-left:50px; height:206px; overflow-y: auto; }
.check_user_list ul{margin-top:10px;padding:10px 0; }
.check_user_list ul li{padding:5px 10px; margin-bottom:1px;}
.check_user_list ul li:hover{background-color:#ddd;}
.check_user_list ul li img{border-radius:50%;
    background:url(../img/user.png) no-repeat;
    width:30px;
    height:30px;
    display:inline-block;
    vertical-align: middle;
}
.check_user_list ul li span{display:inline-block; font-size:14px;}


.group_head {margin-top:20px; position:relative;}
.group_head img{width:40px; height: 40px; display:inline-block; vertical-align: middle; border-radius:50%;}
.group_head span{display:inline-block; font-size:16px; line-height:40px;}
.group_head span.group_do{display:inline-block; line-height:40px;float:right; background:url(../img/cen_menu.png) no-repeat left center;width:28px; height:40px; cursor: pointer;}
.group_head .group_menu{position: absolute; background: #fff; border:1px solid #cccccc; font-size:12px; right:0; top: 30px; display:none; z-index:100;
    color:#c1c3c4; padding:5px;
}
.group_head .group_menu div{height:20px; line-height:20px; cursor:pointer;}
.group_head .group_menu div:hover{color:#0a0a0a;}

.check_ico{background:url(../img/check.png) #dbf3f5 no-repeat center right;}
.checked_ico{background:url(../img/checked.png) no-repeat right center;}

.group_admin{color:red;}

.cursor_hand{cursor:pointer;}

#user_list .check_user_list{ height: 300px; padding:0 20px;}
#chat_message_box{height:100%;}

#message_box .people_out .on {
    background: #e8e8e8;
}
