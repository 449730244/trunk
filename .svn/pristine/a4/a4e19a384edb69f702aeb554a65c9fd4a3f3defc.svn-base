        $this->sendToGroup($group->group_name, [
            'type' => 'group_exit',
            'group_name' => $group->name,
            'group_id' => $group->id,
            'message' => $user_name.'退出群聊',
            'exit_user_id' => $user_id,
            'time' => date('H:i'),
            'date' => date('Y-m-d H:i:s'),
