.customer{
    font-size: 14px;
    width: auto;
    height: auto;
    border: 1px solid #d2d2d2;
    position: fixed;
    bottom: 300px;
    right: 0;
    background-color: #fff;
    margin-right: 5px;
}
.customer .top {
    text-align: right;
    background: #F8F8F8;
    border-bottom: 1px solid #eee;
}
.customer .top .title{
    padding: 0 10px 0 15px;
    height: 42px;
    line-height: 42px;
    font-size: 14px;
    color: #333;
    overflow: hidden;
    background-color: #F8F8F8;
    font-weight: bold;
}
.customer .top .customer-close{
    margin-right: 10px;
}
.customer .top .customer-close:hover{
    margin-right: 10px;
    cursor:pointer;
}
.customer .content_list .list{
    cursor: pointer;
}
.customer .content_list .list:hover{
    color: blue;
}
.customer .content_list .list .img{
    margin-left: 18px;
}
.customer .content_list .list img{
    width: 25px;
    height: 25px;
    border-radius: 100%;
}
.customer .content_list .list .name{
    height: 42px;
    line-height: 42px;
    font-weight: bold;
    margin-left: 5px;
}
.customer .content_list .list .offline{
    color: #c2c2c2;
}

#customer_box .layui-tab .layui-tab-title li{
    min-width: 94px;
}
.customer_hid{
    display: none;
}
.online-customer{
    font-size: 14px;
    width: 22px;
    height: auto;
    border: 1px solid #d2d2d2;
    position: fixed;
    bottom: 360px;
    right: 0;
    background-color: #fff;
    margin-right: 5px;
    text-align: center;
    padding: 5px;
    font-weight: bold;
    cursor: pointer;
    display: none;
}
.online-customer-show{
    display: inline;
}