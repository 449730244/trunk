        msg_str +=  '<div class="say_r ">' +
            '               <div>' +
            '                   <span class="user">'+ data.content.user_name+'</span>' +
            '                   <span class="time">'+ data.updated_at +'</span>' +
            '                </div>' +
            '                <div class="pop">' +
            '                    <div class="pop_r ">' +
            '                       <div class="pop_l ">' +
            '                          <img src="img/pop_left.png" alt="">' +
            '                        </div>' +
            '                          <p>'+ data.content.content +'</p>' +
