function json_post(url, data, callback_function, callback_error, async, cache){

    $.ajax({
        url: url,
        type: "POST",
        processData: true,
        cache:cache,
        async: async,
        data: data,
        dataType: 'json',
        success: callback_function,
        error: callback_error
    });

}

function json_get(url, data, callback_function, callback_error, async, cache, dataType){

    $.ajax({
        url: url,
        type: "GET",
        processData: true,
        cache:cache,
        async: async,
        data: data,
        dataType: dataType,
        success: callback_function,
        error: callback_error
    });
}

